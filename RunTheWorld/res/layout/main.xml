<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgMotionClass"
                android:layout_width="270dip"
                android:layout_height="270dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="8dip"
                android:scaleType="centerCrop"
                android:src="@drawable/stop_sign" >

            </ImageView>

            <ToggleButton
                android:id="@+id/buttonDoUpload"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dip"
                android:layout_weight="1"
                android:text="Start Running"
                android:textOff="Start Running"
                android:textOn="Stop Running" >
            </ToggleButton>

            <!--
        <Button
		    android:id="@+id/buttonUpload"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:layout_margin="8dip"
		    android:layout_weight="1"
		    android:text="@string/strButtonUpload" >

		</Button>
            -->

            <TextView
                android:id="@+id/textAccelX"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="AccelX" />

            <TextView
                android:id="@+id/textAccelY"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="AccelY" />

            <TextView
                android:id="@+id/textAccelZ"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="AccelZ" />

            <TextView
                android:id="@+id/textAzimuth"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="Azimuth" />

            <TextView
                android:id="@+id/textMotionClass"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="MotionClass" />

            <TextView
                android:id="@+id/textMeanAccel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_weight="1"
                android:text="Mean Accel" />

            <TextView
                android:id="@+id/textDebug"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="8dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/strDebugText" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
